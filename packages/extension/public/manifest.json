{
  "manifest_version": 3,
  "version": "0.1.0",
  "short_name": "Koriander",
  "name": "Koriander",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "content_scripts": [
    {
      "all_frames" : false,
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end",
      "js": ["./static/js/content.js"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "web_accessible_resources": [{
    "resources": ["static/js/inject.js"],
    "matches": ["<all_urls>"]
  }]
}
