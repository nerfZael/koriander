{
  "manifest_version": 3,
  "version": "0.1.0",
  "short_name": "Koriander",
  "name": "Koriander extension",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["./static/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "web_accessible_resources": [{
    "resources": ["static/js/inject.js"],
    "matches": ["<all_urls>"]
  }]
}
